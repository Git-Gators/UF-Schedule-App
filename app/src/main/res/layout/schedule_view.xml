<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="deleteCourse">

    <Button
        android:id="@+id/details5"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="createPopup"
        android:tag="4"
        android:text="Info"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/courseText5"
        app:layout_constraintTop_toBottomOf="@+id/courseText4" />

    <Button
        android:id="@+id/details4"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="createPopup"
        android:tag="3"
        android:text="Info"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/courseText4"
        app:layout_constraintTop_toBottomOf="@+id/courseText3" />

    <Button
        android:id="@+id/details3"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="createPopup"
        android:tag="2"
        android:text="Info"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/courseText3"
        app:layout_constraintTop_toBottomOf="@+id/courseText2" />

    <Button
        android:id="@+id/details2"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="createPopup"
        android:tag="1"
        android:text="Info"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/courseText2"
        app:layout_constraintTop_toBottomOf="@+id/courseText1" />

    <Button
        android:id="@+id/details1"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:onClick="createPopup"
        android:tag="0"
        android:text="Info"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/courseText1"
        app:layout_constraintTop_toBottomOf="@+id/semesterSpinner" />

    <TextView
        android:id="@+id/courseText6"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="67dp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semesterSpinner" />

    <ProgressBar
        android:id="@+id/progressBarSchedule"
        style="?android:attr/progressBarStyle"
        android:layout_width="26dp"
        android:layout_height="29dp"
        android:layout_marginTop="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />

    <TextView
        android:id="@+id/courseText1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:onClick="createPopup"
        android:tag="0"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semesterSpinner" />

    <TextView
        android:id="@+id/courseText2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:onClick="createPopup"
        android:tag="1"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseText1" />

    <TextView
        android:id="@+id/courseText3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:onClick="createPopup"
        android:tag="2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseText2" />

    <TextView
        android:id="@+id/courseText4"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:onClick="createPopup"
        android:tag="3"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseText3" />

    <TextView
        android:id="@+id/courseText5"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:onClick="createPopup"
        android:tag="3"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseText4" />

    <Button
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:onClick="goToDelete"
        android:text="Remove All"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toStartOf="@+id/addCourse"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addCourse"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="12dp"
        android:onClick="addCourse"
        android:text="Add Course"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/delete" />

    <Button
        android:id="@+id/delete1"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:onClick="deleteCourse"
        android:tag="0"
        android:text="Del"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/courseText1"
        app:layout_constraintTop_toBottomOf="@+id/semesterSpinner" />

    <Button
        android:id="@+id/delete2"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="deleteCourse"
        android:tag="1"
        android:text="Del"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/courseText2"
        app:layout_constraintTop_toBottomOf="@+id/courseText1" />

    <Button
        android:id="@+id/delete3"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="deleteCourse"
        android:tag="2"
        android:text="Del"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/courseText3"
        app:layout_constraintTop_toBottomOf="@+id/courseText2" />

    <Button
        android:id="@+id/delete4"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="deleteCourse"
        android:tag="3"
        android:text="Del"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/courseText4"
        app:layout_constraintTop_toBottomOf="@+id/courseText3" />

    <Button
        android:id="@+id/delete5"
        android:layout_width="72dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="deleteCourse"
        android:tag="3"
        android:text="Del"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/courseText4"
        app:layout_constraintTop_toBottomOf="@+id/courseText4" />

    <Spinner
        android:id="@+id/semesterSpinner"
        style="@android:style/Widget.Holo.Spinner"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_marginTop="68dp"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semesterSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>